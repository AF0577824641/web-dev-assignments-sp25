<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Books</h1>
        <a href="/books/form" class="btn btn-primary">Create a new book</a>
    </div>

    <div class="list-group">
        {{#each books}}
            <div class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="mb-1"><a href="/books/show/{{@index}}">{{this.title}}</a></h5>
                    <small>Published: {{this.publishingYear}}</small>
                </div>
                <a href="/books/edit?id={{@index}}" class="btn btn-secondary btn-sm">Edit</a>
            </div>
        {{/each}}
    </div>
</div>
