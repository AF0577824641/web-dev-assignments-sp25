<div class="container mt-4">
    <h1>{{book.title}}</h1>

    <div class="card mb-4">
        <div class="card-body">
            <p><strong>Published:</strong> {{book.publishingYear}}</p>
            {{#if authors}}
              <p><strong>Authors:</strong> {{#each authors}}{{this.firstName}} {{this.lastName}}{{#unless @last}}, {{/unless}}{{/each}}</p>
            {{/if}}
            {{#if genre}}
              <p><strong>Genres:</strong> {{genre.genre}}</p>
            {{/if}}

            {{#if currentUser}}
            <div class="mt-3">
              <form action="/books_users/upsert" role="form" method="post" class="form-inline">
                <input type="hidden" name="_csrf" value="{{_csrfToken}}">
                <input type="hidden" name="bookId" value="{{bookId}}">
                <input type="hidden" name="userEmail" value="{{currentUser.email}}">
                <div class="form-group mb-2">
                  <label for="status" class="mr-2">Status:</label>
                  <select name="status" id="status" class="form-control">
                    {{#unless (and bookUser bookUser.status)}}
                      <option disabled selected value>-- select status --</option>
                    {{/unless}}
                    {{#each statuses}}
                      <option value="{{this}}" {{#if (and @root.bookUser (eq @root.bookUser.status this))}}selected{{/if}}>{{this}}</option>
                    {{/each}}
                  </select>
                </div>
                <button type="submit" class="btn btn-primary ml-2">Update Status</button>
              </form>
            </div>
            {{/if}}
        </div>
    </div>

    <!-- Comments Section -->
    <div class="card mb-4">
        <div class="card-body">
            <h4 class="card-title mb-4">Comments</h4>

            {{#if comments.length}}
                <div class="comments-list mb-4">
                    {{#each comments}}
                        <div class="comment card mb-3">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <h6 class="card-subtitle mb-0 fw-bold">{{this.userName}}</h6>
                                    <small class="text-muted">{{dateStr this.createdAt}}</small>
                                </div>
                                <p class="card-text">{{this.text}}</p>
                                {{#if (eq this.userEmail ../currentUser.email)}}
                                    <div class="d-flex justify-content-end">
                                        <a href="/comments/edit/{{this.id}}" class="btn btn-sm btn-outline-primary">Edit</a>
                                    </div>
                                {{/if}}
                            </div>
                        </div>
                    {{/each}}
                </div>
            {{else}}
                <p>No comments yet. Be the first to comment!</p>
            {{/if}}

            {{#if currentUser}}
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Add a Comment</h5>
                        <form action="/comments/create" method="POST">
                            <input type="hidden" name="_csrf" value="{{_csrfToken}}">
                            <input type="hidden" name="bookId" value="{{bookId}}">

                            <div class="form-group mb-3">
                                <label for="text" class="form-label">Your comment:</label>
                                <textarea
                                    class="form-control"
                                    id="text"
                                    name="text"
                                    rows="3"
                                    required></textarea>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Post Comment</button>
                            </div>
                        </form>
                    </div>
                </div>
            {{else}}
                <div class="alert alert-info">
                    <p>Please <a href="/users/login">log in</a> to add a comment.</p>
                </div>
            {{/if}}
        </div>
    </div>

    <div class="mt-3">
        <a href="/books" class="btn btn-secondary">Back to Books</a>
    </div>
</div>
