<h1>New Genre</h1>

<h2>{{genre.name}}</h2>
<form action="/genres/upsert" method="POST">
  {{#if genre.id}}
    <input type="hidden" name="id" value="{{genre.id}}" />
  {{/if}}

  <div class="mb-3">
    <label for="name">Genre Name:</label>
    <input
      type="text"
      class="form-control"
      id="name"
      name="name"
      value="{{genre.name}}"
      required
    />
  </div>

  <div class="mb-3">
    <label for="description">Description:</label>
    <textarea
      class="form-control"
      id="description"
      name="description"
      rows="4"
    >{{genre.description}}</textarea>
  </div>

  <div class="mb-3">
    <button type="submit" class="btn btn-primary">Save</button>
    <a href="/genres" class="btn btn-secondary">Cancel</a>
  </div>
</form>